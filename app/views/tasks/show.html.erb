<h1 class='fa-solid' ><%= @task.title %></h1>
<h5><%= link_to "Edit task", edit_path(@task), class: "text-decoration-none fa-solid" %></h5>
<div class='p-3 mb-3 mt-3 bg-secondary border border-2 border-secondary rounded fa-solid' style="--bs-bg-opacity: .2;"><%= @task.details %></div>

<div>
  <input type="checkbox" name='task' disabled <%= 'checked' if @task.completed %>/>
  <label for="task" class='fa-solid' ><%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %></label>
</div>
<hr>
<%= link_to " Back to list", tasks_path, class: "text-decoration-none fa-solid fa-rotate-left" %>
