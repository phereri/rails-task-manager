<h1 class='fa-solid' >Tasks</h1>
<br>
<% @tasks.each do |task| %>
  <div>
    <input type="checkbox" name='task' disabled <%= 'checked' if task.completed %>/>
    <label for="task"><%= link_to task.title, task_path(task), class: "text-decoration-none fa-solid" %></label> -
    <label for="task delete">
    <%= link_to "", task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash-can"%>
    </label>
  </div>
<% end %>
<hr>
<%= link_to " Add a new task", tasks_new_path, class: "fa-solid fa-plus text-decoration-none" %>
